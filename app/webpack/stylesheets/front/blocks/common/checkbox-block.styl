.checkbox-block
  &__label
    display flex
    align-items center
    cursor pointer
    user-select none // disable selected text
    & + &
      margin-top 15px

  &__input
    display none

  &__visual-checkbox
    display inline-block
    width 15px
    height 15px
    border 1px solid #ccc
  
  &__svg
    display none
    width 9px
    height 7px
    margin auto
    position absolute
    top 0
    left 0
    right 0
    bottom 0
  
  &__input:checked + &__visual-checkbox
    border-color #315efb
    color #315efb
    text-align center
    font-size 13px
    font-weight bold
    position relative
    
    .checkbox-block__svg
      display block

  &__text
    font-size 13px
    color #262626
    margin-left 10px