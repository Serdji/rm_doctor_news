.menu-left
  display flex
  flex-direction column
  width 300px
  height 95px
  borderBlock()
  margin-bottom space
  padding 20px 20px 20px 25px

  &__box
    centerBlock()
    &:nth-last-child(1)
      margin-top auto

  &__svg
    width 18px
    height 18px
    fill #262626
    stroke #262626
    margin-right 12px
    &._themes
      width 21px
      margin-right 10px

  &__point
    centerBlock()
    font-size 14px
    font-weight 500
    letter-spacing 0.3px
    color #262626

    &._activ
      color #315efb

      .menu-left__svg
        fill #315efb
        stroke #315efb

  &__counter
    font-size 12px
    line-height 2.92
    letter-spacing 0.3px
    color #262626
    font-family CorsicaRamblerLX-Regular
    margin-left auto