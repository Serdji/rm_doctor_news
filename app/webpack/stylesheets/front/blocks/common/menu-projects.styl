.menu-projects
  position fixed
  top 0
  left 0
  bottom 0
  right 0
  z-index 6
  background rgba(0,0,0,0.8)
  display none
  &._active
    display block


  &__menu
    position absolute
    width 205px
    height 100%
    left -@width
    background-color #eef2f4
    padding 30px 20px
    box-sizing border-box
    transition transAll
    &._active
      left 0
