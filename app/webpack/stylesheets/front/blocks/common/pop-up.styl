.pop-up
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  background rgba(0, 0, 0, 0.8)
  z-index 3
  display none
  overflow scroll
  padding 20px

  &._activ
    display flex
    align-items flex-start

  &__block
    position relative
    padding 40px 40px
    box-sizing border-box
    width 660px
    background blockBack
    margin auto

  &__close
    position absolute
    cursor pointer
    top 30px
    right 30px
    width 20px
    height 20px
    opacity 0.4
    transition transAll
    &:hover
      opacity 1
      .pop-up__close-svg
        opacity 0
        &._activ
          opacity 1

  &__close-svg
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    opacity 1
    transition transAll

    &._activ
      opacity 0