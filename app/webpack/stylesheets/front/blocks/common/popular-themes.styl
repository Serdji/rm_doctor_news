.popular-themes
  // margin-bottom 60px

  &__short-stripe
    font-size 1px
    img
      display inherit
      width 100%
      height 5px

  &__theme
    borderBlock()
    width 300px
    height 100px
    background #fff
    margin-bottom space
    overflow hidden
    &:nth-last-child(1)
      margin-bottom 0


  &__content
    height 100%
    display flex
    flex-direction column
    justify-content flex-start
    padding 15px 20px 5px
    box-sizing border-box
    overflow hidden
    font-family CorsicaRamblerLX-Regular

  &__title
    font-family CorsicaRamblerLX-Medium

  &__title
    font-size 15px
    color #000000
    overflow hidden

  &__question
    centerBlock()
    height 45px
    margin-top auto

  &__icon
    display inline-block
    width 14px
    height 15px
    margin-right 6px

    &-svg
      width 100%
      height 100%

  &__box-counter
    centerBlock()
    height 100%
    width 50%

  &__counter
    font-size 12px
    color #000000
    height 12px
    &._question
      margin-right 27px
