.reference-block
  borderBlock()
  background blockBack
  padding-bottom 10px

  &__title
    textTransUp()
    font-size 12px
    font-weight 500
    font-style normal
    font-stretch normal
    line-height 4.0
    letter-spacing 0.8px
    color #4a4a4a

  &__icon
    text-align center
    margin-bottom 30px
    height 100px
    &-svg
      width 100%
      height 100%

  &__reference
    padding 0 25px
    a
      display block
      font-family CorsicaRamblerLX
      font-weight 500
      font-size 13px
      color #262626
      line-height 20px
      word-wrap break-word
      margin-bottom 20px
