.menu-transformer
  position fixed
  left 0
  right 0
  height 0
  z-index 5
  transition all .5s ease-in-out

  .news-card__description-social
    position absolute
    right 15px
    background #ffffff
    box-shadow -40px 0px 60px 20px #ffffff
    @media(max-width: max-width)
      right 25px

  &__wrapper,
  &__content,
  &__transform,
  &__search
    centerBlock()

  &__transform
    position absolute
    top -60px
    left 0
    right 0
    padding 0 15px
    transition all .5s ease-in-out
    background #ffffff
    height 60px
    z-index 2
    @media(max-width: max-width)
      padding 0 25px

    span
      width 735px
      height 30px
      font-family CorsicaRamblerLX
      font-weight 500
      font-size 18px
      line-height 1.67
      text-align left
      color #262626
      textEllipsis()
      @media(max-width: min-width)
        width 495px

    &._active
      top 0

  &__content
    position relative
    background #ffffff
    height 60px

  &__wrapper
    position relative
    top -160px
    height 60px
    overflow hidden
    box-shadow 0 2px 7px 0 rgba(0, 0, 0, 0.1)
    background #ffffff
    transition all .5s ease-in-out

    .wrapper
      @media(max-width: max-width)
        width 100%
        padding 0 25px

  &__logo
    position relative
    width 190px
    height 30px

  &__search
    centerBlock()
    transition transAll
    border solid 2px #315efb
    opacity 0
    overflow hidden
    padding 10px 0
    box-sizing border-box
    width 0
    height 40px
    font-family Roboto
    font-size 14px
    line-height 1.43
    text-align left
    color #262626
    margin-left auto
    &:focus
      outline none

    &._active
      opacity 1
      width 275px
      padding 10px 40px 10px 15px

  &__icon
    transition transAll
    cursor pointer
    position absolute
    right 0
    top 50%
    width 16px
    height 16px
    margin-top (@height / -2)px
    z-index 1

    &._active
      right 15px

    &-svg
      width 100%
      height 100%



  newsCardShare()
