._media-mobile-size
  .most-read
    width 615px
    height 665px
    display none
    margin-top space
    @media(max-width: min-width)
      display block
      height 675px
      &__text
        textEllipsis()
        width 100%
        margin-left 20px

    &__news
      &:nth-child(10),
      &:nth-child(11),
      &:nth-child(12)
        .most-read__text
          margin-left 20px

.most-read
  borderBlock()
  width 300px
  box-sizing border-box
  height 665px
  overflow hidden
  @media(max-width: max-width)
    height 1005px

  &__title
    centerBlock()
    padding-top 1px
    padding-left 25px
    height 41px
    border-bottom 1px solid rgba(141,150,178,0.20)
    font-size 16px
    font-weight 500
    color #262626
    box-sizing border-box

  &__content
    padding 7px 20px 0
    box-sizing border-box
    overflow hidden
    height 590px
    @media(max-width: max-width)
      height 100%

  &__news
    display flex
    flex-direction row
    flex-wrap nowrap
    align-items flex-start
    margin-bottom 4px
    cursor pointer
    height 48px
    &:nth-last-child(1)
      margin-bottom 0
    &:hover
      .most-read__place,
      .most-read__text
        color #315efb
        opacity 1



  &__place,
  &__text
    transition transAll

  &__place
    width 35px
    height 30px
    opacity 0.6
    -ms-flex-negative 0
    flex-shrink 0
    font-size 30px
    margin-right 10px
    text-align center
    font-family Georgia
    color #8d96b2

  &__text
    width 220px
    word-wrap break-word
    font-family CorsicaRamblerLX
    font-size 14px
    color #262626
    line-height 21px
    margin-left auto
    padding-top 8px
    &:nth-last-child(1)
      margin-bottom 0

  &__button
    height 35px
    margin-top 30px
    padding 0 !important
    font-family Roboto-Medium
