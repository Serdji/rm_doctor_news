.news-items
  margin-bottom space
  width 375px
  height 90px
  float left
  margin-right 15px
  &:nth-last-child(1)
    margin-bottom 0
  @media(max-width: max-width)
    width: 300px
  @media(max-width: min-width)
    &:nth-child(odd)
      margin-right 0
  &:visited
    .news-items__title
      color #676767
  &:hover
    .news-items__img
      opacity 0.8
    .news-items__title
      color #315EFB


  &__img,
  &__content
    display inline-block

  &__img
    width 135px
    height 90px
    transition transAll
    background-size cover
    background-position 50%

  &__content
    width 150px
    height 100%
    margin-left 15px
    padding-top 3px
    padding-bottom 10px
    box-sizing border-box
    vertical-align top


  &__title
    font-size 14px
    line-height 19px
    color #262626
    overflow hidden
    font-family CorsicaRamblerLX
    font-weight 500
    transition transAll
    max-height 57px
    @media(max-width: max-width)
      line-height 1.4
