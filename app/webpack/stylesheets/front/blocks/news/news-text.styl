.news-text
  borderBlock()
  width 300px
  height 325px
  padding 24px
  display flex
  flex-direction column
  flex-wrap flex-start
  box-sizing border-box
  margin-top space

  &__title
    font-size 22px
    font-weight 500
    line-height 1.36
    color #262626
    margin-bottom space

  &__text
    font-size 13px
    line-height 1.54
    color #262626

  &__button
    width 160px
    height 35px
    padding 0
    margin-top auto
    font-family Roboto-Medium
    font-weight 500