.ellipsis
  position relative
  margin-left auto
  margin-right 5px
  cursor pointer
  &._activ
    .ellipsis__pop-up
      display block


  &__icon
    position relative
    width 18px
    height 20px
    cursor pointer

    &:hover
      .ellipsis__icon-svg
        fill #315efb
        opacity 1

    &-svg
      opacity .4
      fill #343B4C
      width 99%
      height 100%
      transition transAll

  &__pop-up
    display none
    position absolute
    left -86px
    background rgba(255, 255, 255, 0.96)
    box-shadow 0 2px 10px 0 rgba(52,59,76,0.15)
    box-sizing border-box

  &__send
    a
      font-size 13px
      color #262626
      display block
      margin 10px 16px


  &__arrow
    position absolute
    top -4px
    left 92px
    width 0
    height 0
    border 4px solid transparent
    border-bottom-color rgba(255, 255, 255, 0.96)
    border-top 0
