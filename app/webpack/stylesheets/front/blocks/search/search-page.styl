.search-page
  display flex
  flex-wrap wrap
  justify-content space-between
  font-size 1px // фикс для цветной линии у тегов

  &__title
    font-size 17px
    font-family CorsicaRamblerLX-Medium
    font-weight 500
    color #262626
    margin-bottom 30px

  &__point
    margin-top auto
    padding-left 5px

  &__subtitle
    padding 0 10px
    display inline-block
    font-size 14px
    font-weight 500
    margin-right 50px
    color #000
    height 25px
    border-bottom 2px solid rgba(49, 94, 251, 0);
    &:hover
      border-bottom 2px solid rgba(49, 94, 251, 1);
      .search-page__subtitle-text
        color #315efb

    &._active
      border-bottom 2px solid rgba(49, 94, 251, 1);
      .search-page__subtitle-text
        color #315efb


    &-text
      font-family Roboto
      font-size 11px
      color #262626
      letter-spacing 0.3px
      textTransUp()
  
  &__counter
    width 42px
    height 16px
    font-size 12px
    color #8d96b2
    margin-left 5px
    font-weight normal

  &__block
    width 100%
    margin-bottom 20px
    borderBlock()

  &__item
    width 100%
    background-color #fff
    color #000
    padding 20px 22px
    box-sizing border-box
    word-wrap break-word

    &._head-item
      min-height 115px
      display flex
      flex-direction column
      padding 20px 22px 0 22px
      margin-bottom 15px
      borderBlock()
  
  &__null
    &-result
      width 100%
      display flex
      margin-bottom 15px
      background blockBack
      height 160px
      borderBlock()

      &-box
        text-align center

      &-title
        margin-top 40px
        margin-bottom 10px
        font-size 20px
        color #262626
        font-family CorsicaRamblerLX-Medium
        font-weight 500
        text-align center

      &-text
        font-family CorsicaRamblerLX-Medium
        font-size 13px
        color #262626

  &__item:first-child
  &__item:last-of-type
    &:after
      display none
  
  // отспут для пагинации
  &__item:last-child
    margin-bottom 20px
  
  &__item-title a
    display block
    color #000
    font-size 17px
    font-family CorsicaRamblerLX-Medium
    font-weight 500
    line-height 1.33
    margin-bottom 10px
    word-wrap break-word
    @extend ._hover-reference-blue

  &__item-title b
  & .tag__title b
      //background-color #fff57f
      font-weight inherit
      display inline-block

  &__text
    width 540px
    max-height 60px
    font-size 14px
    line-height 1.43
    margin-bottom 5px
    overflow hidden
    
    // фикс верстки приходящей от поиска, удалить перед релизом
    *
      margin 0 !important
      display inline !important
      font-size inherit !important
      font-family inherit !important
      color inherit !important

  &__quesurl
    font-size 13px
    color #315efb
    display inline-block
    margin-right 10px

  &__answer
    display inline-block
    font-size 13px
    color #a2a2a2
  
  &__image
    width 72px
    height 72px
    margin-bottom 20px


  &__item--theme
    display inline-block
    width calc(50% - 10px)
    margin-bottom 20px
    &:after
      display none
    
    & ^[0]__answer
    & ^[0]__question
      color #262626
      font-size 13px
      margin-right 20px
      @extend ._hover-reference-blue
    
    .question-common__social
      position absolute
      top 20px
      right 22px
      z-index 2
