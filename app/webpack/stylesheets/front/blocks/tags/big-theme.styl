.big-theme
  background blockBack
  borderBlock()
  height 190px
  box-sizing border-box
  margin-bottom spaceTheme
  width 100%
  overflow hidden

  &__wrapper
    font-size 1px
    display inline-block
    width 100%

    &._hidden
      display none

  &__header,
  &__counters
    centerBlock()

  &__header
    padding 10px 20px 0 0

  &__content
    padding 0 20px
    display flex
    font-size 1px
    img
      width 80px

  &__cover
    margin-right 18px

  &__title
    margin 0
    font-size 22px
    color #000000
    display inline-block
    font-family CorsicaRamblerLX
    font-weight 500
    b
      font-weight inherit !important

  &__counters
    margin-top 7px
    span
      margin-right 27px
      font-family CorsicaRamblerLX
      font-size 12px
      height 12px
      color #000000

  &__icon
    display inline-block
    width 14px
    height 14px
    margin-right 6px

    &-svg
      width 100%
      height 100%

