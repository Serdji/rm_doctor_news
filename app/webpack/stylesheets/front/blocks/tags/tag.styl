.tag
  font-size 1px
  display flex
  flex-wrap wrap
  justify-content space-between

  &__short-stripe
    img
      display inherit
      height 5px
      width 100% + 2px

  &__theme
    display inline-block
    vertical-align top
    width 300px
    height 210px
    margin-bottom spaceTheme
    background blockBack
    box-sizing border-box
    overflow hidden
    borderBlock()
    &:nth-last-child(1),
    &:nth-last-child(2)
      margin-bottom 0



  &__content,
  &__footer
    centerBlock()

  &__content
    position relative
    padding 20px 20px 0 20px
    box-sizing border-box
    height 147px
    align-content flex-start
    flex-wrap wrap
    .question-common__social
      align-self flex-start
      position absolute
      right 20px
      top 10px

  &__cover
    align-self flex-start
    img
      width 80px

  &__title
    position absolute
    bottom -10px
    left 20px
    right 10px
    height 45px
    a
      font-size 17px
      color #000000
      line-height 24px
      word-wrap break-word
      font-family CorsicaRamblerLX-Medium
      font-weight 500

  &__footer
    margin-top 12px
    height 44px
    padding 0 20px

    &__box-counter
      centerBlock()
      height 44px
      width 50%

  &__icon
    display inline-block
    width 14px
    height 14px
    margin-right 6px

    &-svg
      width 100%
      height 100%

  &__counter
    font-family CorsicaRamblerLX-Regular
    font-size 12px
    height 12px
    color #000000
    &._question
      margin-right 27px