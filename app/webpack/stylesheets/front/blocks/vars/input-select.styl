.input-select

  label
    line-height 2.86
    color #262626

  input, select
    border-radius 1px
    margin-bottom 8px
    outline none
    border 1px solid #d8d8d8
    padding-left 15px
    padding-right 30px
    background transparent
    box-sizing border-box
    line-height 2.5
    color #262626
    transition transAll
    font-family CorsicaRamblerLX
    &::placeholder
      color #8D96B2
      opacity 1
    &:focus
      border 1px solid #315efb
      &::placeholder
          color transparent

  input::-ms-clear
    display none
