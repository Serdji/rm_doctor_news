.pagination-wrapper
  width 100%
  margin 15px 0
  &:empty
    display none

.pagination-mobile
  padding 0 16px
  display flex
  justify-content center

  .current
    margin 0 10px


  a
  em
  span
    display flex
    align-items center
    justify-content center
    font-size 15px
    color #262626
    width 40px
    height 40px
    border 1px solid transparent
    font-style normal
    border-radius 50%
    box-sizing border-box


  em
    color #fff
    background-color #315efb

  .gap
    &:hover
      border-color transparent

  .previous_page
  .next_page
    display none
