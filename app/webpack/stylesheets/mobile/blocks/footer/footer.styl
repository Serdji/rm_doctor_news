.footer
  padding-bottom 30px
  text-align center
  margin-top 7px

  &__bottom
    padding 0 20px

  &__сopyright,
  &__top
    centerBlock()

  &__top
    justify-content center
    position relative
    height 50px
    margin-bottom 20px
    background #272d3c

  &__logo
    width 160px
    height 50px

    &-svg
      width 100%
      height 100%

  &__rambler,
  &__class
    position absolute
    height 50px

  &__rambler
    left 0
    width 58%

  &__class
    right 0
    width 42%

  &__menu
    li
      display block
      margin-bottom 20px
    a
      font-size 13px
      line-height 1.15
      color #ffffff

  &__сopyright
    justify-content center
    &-title,
    &-age-limit
      line-height 1.36
      color #dfe4ec
      font-size 11px
      opacity 0.8

    &-title
      margin-right 20px

    &-age-limit
      centerBlock()
      justify-content center
      width 39px
      height 26px
      border solid 1px #4b5264
