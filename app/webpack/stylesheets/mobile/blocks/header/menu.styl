.menu

  &._hidden
    .menu__curtain
      display none
    .menu__block
      transform translate3d(-100%, 0, 0)
    .menu__close
      opacity 0

  &__curtain,
  &__block
    position fixed
    transform translate3d(0, 0, 0)
    top 0
    bottom 0
    transition transAll

  &__curtain
    width 100%
    z-index 4
    background rgba(52, 59, 76, 0.6)
    display block

  &__close
    position absolute
    top 28px
    left 88%
    width 20px
    height 20px
    opacity 1
    transition transAll

    &-svg
      width 100%
      height 100%

  &__block
    box-sizing border-box
    background #343b4c
    width 80%
    z-index 4
    padding 28px 0

  &__header
    padding 0 20px
    margin-bottom 12px

  &__logo
    width 144px
    height 24px

    &-svg
      width 100%
      height 100%

  &__point
    centerBlock()
    height 44px
    padding 0 20px

    &._activ
      background rgba(141, 150, 178, 0.2)

  &__icon
    width 20px
    height 20px
    opacity 0.3
    margin-right 10px

    &._theme
      width 23px
      height 14px

    &-svg
      width 100%
      height 100%

  &__title
    font-size 16px
    line-height 2.75
    color #ffffff

  &__counter
    opacity 0.6
    font-size 14px
    line-height 3.14
    color #ffffff
    margin-left auto

