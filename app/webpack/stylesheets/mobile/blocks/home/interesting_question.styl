.interesting_question
  background blockBack
  margin-bottom space
  padding 14px 20px 1px 20px

  &__block
    margin-bottom 13px

    &-title
      textTransUp()
      font-size 12px
      line-height 1.82
      letter-spacing 1px
      color #8d96b2

  &__theme
    font-size 15px
    font-weight 500
    line-height 1.33
    color #000000
    a
      color #000000
      font-family CorsicaRamblerLX-Medium


  &__counter
    font-size 12px
    color #315efb

  &__wrapper
    position relative
    top 3px
    display inline-block

  &__box
    centerBlock()
    margin-top -6px

  &__icon
    margin 0 4px
    display inline-block
    width 14px
    height 16px

    &-svg
      width 100%
      height 100%

