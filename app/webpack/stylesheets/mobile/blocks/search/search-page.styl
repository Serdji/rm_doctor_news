.search-page
  display flex
  flex-wrap wrap
  justify-content space-between
  font-size 1px // фикс для цветной линии у тегов

  &__title
    font-family CorsicaRamblerLX-Medium
    font-size 17px
    font-weight 600
    color #000
    margin-bottom 12px
    word-wrap break-word

  &__subtitle
    display inline-block
    font-size 14px
    font-weight 500
    margin-right 20px
    padding-bottom 20px
    color #000

  &__subtitle.active
    color #315efb

    .search-page__subtitle-text
      position relative
      &:after
        content ""
        display inline-block
        position absolute
        left 0
        bottom -19px
        width 100%
        height 2px
        background-color #315efb

  &__counter
    font-size 14px
    font-weight 400
    color #a2a2a2
    margin-left 2px

  &__item
    overflow hidden
    display block
    width 100%
    background-color blockBack
    color #000
    padding 20px 20px 27px
    box-sizing border-box
    position relative
    &:after
      content ""
      display block
      width calc(100% - 40px)
      height 1px
      background-color #efefef
      position absolute
      bottom 0
      margin auto

  // block with page title
  &__item:first-child
    display block
    margin-bottom 9px
    padding 10px 20px 0

  &__item-title
    word-wrap break-word
    display block
    color #000
    font-family CorsicaRamblerLX-Medium
    font-size 17px
    font-weight 600
    line-height 1.29
    margin-bottom 10px
    @extend ._hover-reference-blue

  &__item-title b
  & .tag__title b
      background-color #fff57f
      font-weight inherit
      display inline-block

  &__text
    font-family Georgia
    font-size 15px
    line-height 1.33
    margin-bottom 10px
    overflow hidden
    height 95px

    // фикс верстки приходящей от поиска, удалить перед релизом
    *
      margin 0 !important
      display inline !important
      font-size inherit !important
      font-family inherit !important
      color inherit !important

  &__answer
    font-size 13px
    color #a2a2a2
    @extend ._hover-reference-blue

  &__null-result
    width 100%
    margin 40px 0 50px

  &__null-result-image
    display block
    margin auto

  &__null-result-text
    font-family CorsicaRamblerLX-Medium
    font-size 17px
    font-weight bold
    margin-top 14px
    color #315efb
    text-align center

