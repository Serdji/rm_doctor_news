.search-result
  width 100%
  position absolute
  top 48px // search height
  left 0
  right 0
  background-color blockBack
  z-index 2
  height calc(100vh - 48px)

  &__item
    display flex
    align-items center
    height 45px
    padding 0 12px 0 15px
    border-bottom 1px solid #eee

  &__text
    white-space nowrap
    text-overflow ellipsis
    overflow hidden
    font-size 15px
    color #262626

    b
      background-color #fff57f
      font-weight 400

  &__tag-image
    width 24px
    height 24px
    margin-right 11px

  &__global-search
    & ^[0]__text
      color rgba(38,38,38, .6)
    svg
      opacity .6

  &__all-result
    height 44px
    letter-spacing 1.5px
    opacity .9
    position fixed
    left 0
    right 0
    bottom 0
