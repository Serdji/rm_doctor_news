.search
  display flex
  align-items center
  height 48px
  padding-right 4px
  background-color blockBack
  box-shadow 0 1px 3px 0 rgba(0, 0, 0, .15)
  z-index 3
  position absolute
  top 0
  left 0
  right 0

  &_hidden
    display none

  &__input
    border-radius 2px
    border 2px solid #315efb
    width 90%
    height 40px
    box-sizing border-box
    padding-left 12px
    padding-right 30px
    outline none
    color #343b4c
    font-size 16px

  &__hide
    display flex
    align-items center
    justify-content center
    width 10%
    height inherit
    text-align center
    svg
      width 30%
      height inherit
      transform rotate(180deg)

  &__clear
    cursor pointer
    width 11px
    height 11px
    position absolute
    top 0
    bottom 0
    margin auto
    right 18px

    svg
      width 100%
      height 100%
      vertical-align top

    &._hidden
      display none
