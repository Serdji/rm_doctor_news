space = 10px
spaceHeadText = 12px
blockBack = #ffffff
blockBackOpas = rgba(255,255,255,0.5)
delayMin = 150ms
delayMax = 300ms
transAll = all delayMin ease-out
transAllEffect = all delayMax ease-out
hoverBoxShadow = 0px 0px 23px 0px rgba(0,0,0,0.1)
menuHeight = 54px

centerBlock()
  display flex
  align-items center

blockFix(color)
  border 1px solid color

textTransUp()
  text-transform uppercase
  letter-spacing 0.8px

blockHeadTitle()
  centerBlock()
  height 66px
  border-bottom 1px solid #d0d0d0

curtain()
  z-index 1
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background rgba(0, 0, 0, 0.8)

threePoints()
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
